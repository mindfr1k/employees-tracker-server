{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "employees-tracker/employee-add",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "surname", "secondName", "position", "personnelName"],
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 100,
      "pattern": "^[А-ЩЬЮЯЇІЄҐ][А-ЩЬЮЯЇІЄҐа-щьюяїієґ-]+$"
    },
    "surname": {
      "type": "string",
      "maxLength": 100,
      "pattern": "^[А-ЩЬЮЯЇІЄҐ][А-ЩЬЮЯЇІЄҐа-щьюяїієґ-]+$"
    },
    "secondName": {
      "type": "string",
      "maxLength": 100,
      "pattern": "^[А-ЩЬЮЯЇІЄҐ][А-ЩЬЮЯЇІЄҐа-щьюяїієґ-]+$"
    },
    "position": {
      "type": "string",
      "maxLength": 100,
      "pattern": "^[А-ЩЬЮЯЇІЄҐ][а-щьюяїієґ0-9- ]+$"
    },
    "personnelName": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[0-9]+$"
    }
  }
}